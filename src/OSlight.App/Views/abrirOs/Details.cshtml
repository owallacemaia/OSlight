@model OSlight.App.ViewModels.AbrirOSViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NomeReclamante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeReclamante)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NumeroPoste)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroPoste)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">Aberto</dd>
        }
        else
        {
            <dd class="col-sm-10">Fechado</dd>
        }
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
    </dl>
    <br />
    <div class="col-sm-10">
        <textarea rows="15" id="descricaoini"> @Model.Descricao </textarea>
    </div>
    <br />
    <h3>Endereço</h3>
    <hr />
    <partial name="_ListarEndereco" />
    <hr />

    @if (Model.Status == 2)
    {
        <div>
            <h4>Detalhes da finalização do chamado</h4>
            <partial name="../fecharOS/_Details" />
        </div>
    }
    <br />
    <hr />
    <div>
        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        tinymce.init({
            selector: '#descricaoini'
        });
        tinymce.init({
            selector: '#descricaofinal'
        });
    </script>
}