@model OSlight.App.ViewModels.AbrirOSViewModel

@{
    ViewData["Title"] = "Excluir chamado";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger" role="alert">Certeza que deseja exluir o  chamado <b>@Model.Titulo</b></div>
<div>
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NomeReclamante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeReclamante)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NumeroPoste)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroPoste)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">Aberto</dd>
        }
        else
        {
            <dd class="col-sm-10">Fechado</dd>
        }
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
    </dl>
    <br />
    <div class="col-sm-10">
        <textarea id="mytextarea"> @Model.Descricao </textarea>
    </div>
    <br />
    <h3>Endereço</h3>
    <hr />
    <partial name="_ListarEndereco" />
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        tinymce.init({
            selector: '#mytextarea'
        });
    </script>
}