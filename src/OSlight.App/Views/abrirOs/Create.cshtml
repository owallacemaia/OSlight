@model OSlight.App.ViewModels.AbrirOSViewModel

@{
    ViewData["Title"] = "Criar Chamado";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <input asp-for="Status" value="1" hidden class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeReclamante" class="control-label"></label>
                <input asp-for="NomeReclamante" class="form-control" />
                <span asp-validation-for="NomeReclamante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPoste" class="control-label"></label>
                <input asp-for="NumeroPoste" class="form-control" />
                <span asp-validation-for="NumeroPoste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAbertura" class="control-label"></label>
                <input type="date" asp-for="DataAbertura" class="form-control" />
                <span asp-validation-for="DataAbertura" class="text-danger"></span>
            </div>
            <h3 class="showEnd">Endereço</h3>
            <hr />
            <div class="endereco">
                <partial name="_EnderecoOS" />
                <hr />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea id="mytextarea" asp-for="Descricao"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        tinymce.init({
            selector: '#mytextarea'
        });
        showEnd();
        buscarcep();
    </script>
}
